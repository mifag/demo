<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="mifag">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="table_one"/>
            </not>
        </preConditions>
        <createTable tableName="table_one">
            <column name="id" autoIncrement="true" type="bigserial">
                <constraints primaryKey="true" primaryKeyName="pk_table_one"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name= "age" type="integer"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="mifag">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="table_two"/>
            </not>
        </preConditions>
        <createTable tableName="table_two">
            <column name="id" autoIncrement="true" type="bigserial">
                <constraints primaryKey="true" primaryKeyName="pk_table_two"/>
            </column>
            <column name="nationality" type="varchar(255)"/>
            <column name= "age" type="integer"/>
        </createTable>
    </changeSet>

    <changeSet id="4" author="mifag">
        <preConditions onFail="MARK_RAN">
                <tableExists tableName="Cars"/>
        </preConditions>
        <dropTable tableName="Cars"/>
    </changeSet>

    <changeSet id="5" author="mifag">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="cars"/>
            </not>
        </preConditions>
        <createTable tableName="cars">
            <column name="id" autoIncrement="true" type="bigserial">
                <constraints primaryKey="true" primaryKeyName="pk_cars"/>
            </column>
            <column name="type" type="varchar(255)"/>
            <column name="model" type="varchar(255)"/>
            <column name= "speed" type="integer"/>
            <column name= "power" type="integer"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
